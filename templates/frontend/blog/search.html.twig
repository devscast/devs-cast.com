{% extends 'layout/base.html.twig' %}

{% block meta %}
    <title>Résultat de Recherches | devs-cast.com</title>
    <meta property="og:title" content="Résultat de Recherches | devs-cast.com">
    <meta property="og:description" content="{{ meta().searchDescription }}">
    <meta name="description" content="{{ meta().searchDescription }}">
{% endblock %}

{% block body %}
    <section id="post" class="blog-area ptb-80 bg-black">
        <div class="container">
            <div class="section-title">
                <span>Résultat de Recherches</span>
                <h1>
                    {{ posts.count ? posts.totalItemCount ~ " Vidéos Correspondant" : "Aucun résultat Correspondant" }}
                </h1>
            </div>

            <div class="row">
                {% if posts is defined %}
                    {% for post in posts %}
                        <div class="col-lg-4 col-md-4">
                            {% include 'app/blog/_card.html.twig' %}
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
        <div class="row mt-5">
            <div class="m-auto">
                {{ knp_pagination_render(posts) }}
            </div>
        </div>
    </section>
{% endblock %}


