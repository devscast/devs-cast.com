{% set _route = app.request.get('_route') %}
{% if projects is defined %}
    <main class="lg:mt-20 md:mt-40 mt-40 lg:pb-56 md:pb-10 pb-20 md:px-20 px-5">
        <div class="grid lg:grid-cols-3 md:grid-cols-2 gap-6 items-center">
            {% for project in projects.data %}
                <div>
                    <a href="{{ path('app_project_show', {name: project.name | lower}) }}" class="project" title="{{ project.name }}">
                        <img src="{{ asset(project.screenshots[0]) }}" class="rounded-t-lg"  alt="{{ project.name }}">
                        <div class="project-card">
                            <h3 class="text-2xl font-semibold">
                                <a href="{{ project.link }}"
                                    title="{{ project.name }}"
                                    target="_blank">
                                    {{ project.name }}
                                </a>
                            </h3>
                            <p class=" mt-3">
                                {{ project.role }}
                            </p>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </main>
{% endif %}
