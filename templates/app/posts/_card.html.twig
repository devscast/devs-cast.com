    <img src="{{ vich_uploader_asset(post, 'thumb_file') }}" class="view-poster" alt="{{ post.name }}">
</div>
<div class="mask">
    <figure class="w-full">
        <svg  class="fill-current text-gray-900 text-opacity-75" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
