{% extends 'layout/admin.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="//cdn.jsdelivr.net/gh/highlightjs/cdn-release@9.16.2/build/styles/dracula.min.css">
{% endblock %}

{% block breadcrumb %}
    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb breadcrumb-style1 mg-b-10">
                <li class="breadcrumb-item"><a href="{{ path('backend_index') }}">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="{{ path('backend_blog_index') }}">Blog</a></li>
            </ol>
        </nav>
        <h1 class="mg-b-0 tx-spacing--1">{{ blog.name }}</h1>
    </div>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="mb-3">
            <a class="btn btn-sm btn-primary" href="{{ path('backend_blog_edit', {id: blog.id}) }}">
                <i class="fa fa-edit"></i>
            </a>
            {{ include('admin/blog/_delete_form.html.twig') }}
        </div>
        <div class="card">
            <div class="card-body">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>thumb</th>
                        <td class="text-center">
                            <img width="80%" height="auto" src="{{ vich_uploader_asset(blog, 'thumb_file') }}"
                                 alt="{{ blog.name }}"/>
                        </td>
                    </tr>
                    <tr>
                        <th>Id</th>
                        <td>{{ blog.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ blog.name }}</td>
                    </tr>
                    <tr>
                        <th>Content</th>
                        <td>{{ blog.content | markdown_to_html }}</td>
                    </tr>
                    <tr>
                        <th>Thumb_url</th>
                        <td>{{ blog.thumbUrl }}</td>
                    </tr>
                    <tr>
                        <th>Created_at</th>
                        <td>{{ blog.createdAt ? blog.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Updated_at</th>
                        <td>{{ blog.updatedAt ? blog.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Is_online</th>
                        <td>{{ blog.isOnline ? 'Yes' : 'No' }}</td>
                    </tr>
                    <tr>
                        <th>Is_archived</th>
                        <td>{{ blog.isArchived ? 'Yes' : 'No' }}</td>
                    </tr>
                    <tr>
                        <th>Slug</th>
                        <td>{{ blog.slug }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="//cdn.jsdelivr.net/gh/highlightjs/cdn-release@9.16.2/build/highlight.min.js"></script>
    <script>hljs.initHighlightingOnLoad();</script>
{% endblock %}
