<form class="d-inline-block" method="post" action="{{ path('backend_message_delete', {'id': global_message.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ global_message.id) }}">
    <button class="btn btn-sm btn-danger">
        <i class="fa fa-trash"></i>
    </button>
</form>
