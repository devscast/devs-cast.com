{% extends '@layout/backend/show.html.twig' %}

{% block body %}
    <tbody>
    <tr>
        <th>Id</th>
        <td>{{ vm.data.id }}</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>{{ vm.data.name }}</td>
    </tr>
    <tr>
        <th>Description</th>
        <td>{{ vm.data.description | markdown_to_html }}</td>
    </tr>
    <tr>
        <th>Created At</th>
        <td>{{ vm.data.createdAt ? vm.data.createdAt| date : '' }}</td>
    </tr>
    <tr>
        <th>Is Archived</th>
        <td>{{ active_status(vm.data.isArchived) }}</td>
    </tr>
    <tr>
        <th>Slug</th>
        <td>{{ vm.data.slug }}</td>
    </tr>
    </tbody>
{% endblock %}
