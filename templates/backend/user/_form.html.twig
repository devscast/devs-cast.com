{{ form_start(form) }}
    <div class="pl-lg-4">
        <div class="row">
            <div class="col-lg-6">{{ form_row(form.name) }}</div>
            <div class="col-lg-6">{{ form_row(form.email) }}</div>
        </div>
        <div class="row">
            <div class="col-lg-12">{{ form_row(form.password) }}</div>
            <div class="col-lg-12">{{ form_row(form.roles) }}</div>
            <div class="col-lg-12">{{ form_row(form.avatar_file) }}</div>
        </div>
        <button class="btn btn-block btn-primary">{{ button_label|default('Save') }}</button>
    </div>
{{ form_end(form) }}
