{% extends '@backend/base.html.twig' %}

{% block breadcrumb %}
    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb breadcrumb-style1 mg-b-10">
                <li class="breadcrumb-item"><a href="{{ path('front_index') }}">Tableau de bord</a></li>
                <li class="breadcrumb-item"><a href="{{ path(vm.routes.index) }}">{{ vm.formattedName | capitalize | trans }}</a></li>
            </ol>
        </nav>
        <h1 class="mg-b-0 tx-spacing--1 tx-bolder">
            {{ vm.formattedName | capitalize | trans }}
        </h1>
    </div>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        {% block actions %}{% endblock %}
        {% block content %}{% endblock %}
    </div>
{% endblock %}
