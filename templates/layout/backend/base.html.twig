<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block title %}{% endblock %} | Devscast</title>
    {{ encore_entry_link_tags('dashboard/app') }}
    {% block stylesheets %}{% endblock %}
</head>
<body>
{{ include('@layout/backend/_sidebar.html.twig') }}
<div class="content ht-100v pd-0">
    <div class="content-header">
        <div>
            <div class="d-none d-lg-block d-xl-block">
                {% if vm is defined and vm.options.search %}
                    {{ knp_pagination_filter(vm.data, vm.options.search_filters) }}
                {% endif %}
            </div>
        </div>
        <nav class="nav">
            {% include '@layout/backend/_profile.html.twig' %}
        </nav>
    </div>
    <div class="content-body">
        <div class="container pd-x-0">
            {% include '@layout/backend/_flash.html.twig' %}
            <div class="d-sm-flex align-items-center justify-content-between mg-b-10">
                <div>
                    {% block breadcrumb %}{% endblock %}
                </div>
            </div>
            <div class="row row-xs">
                {% block body %}{% endblock %}
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
        crossorigin="anonymous"
></script>
{{ encore_entry_script_tags('dashboard/app') }}
{% block javascripts %}{% endblock %}
</body>
</html>
