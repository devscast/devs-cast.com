<form method="get" action="{{ action }}"
      enctype="application/x-www-form-urlencoded">
    <div class="form-row content-search">
        {% if fields|length > 1 %}
            <div class="form-group mb-0 mt-0 col-4">
                <label for="knp_filter" class="d-none">Filtre</label>
                <select id="knp_filter" class="form-control select2" name="{{ filterFieldName }}">
                    {% for field, label in fields %}
                        <option value="{{ field }}"{% if selectedField == field %} selected="selected"{% endif %}>{{ label }}</option>
                    {% endfor %}
                </select>
            </div>
        {% else %}
            <input type="hidden" name="{{ filterFieldName }}" value="{{ fields|keys|first }}"/>
        {% endif %}

        <div class="search-form mb-0 mt-0 col-7">
            <label for="knp_filtration" class="d-none">Rechercher</label>
            <input placeholder="Recherche {{ fields|length > 1 ? '' : 'par ' ~ fields|keys|first }} ..."
                   class="form-control"
                   autocomplete="false"
                   type="search"
                   id="knp_filtration"
                   value="{{ selectedValue }}"
                   name="{{ filterValueName }}"
            />
            <button class="btn" type="submit" aria-label="Rechercher" title="rechercher">
                <i data-feather="search"></i>
            </button>
        </div>
    </div>
</form>
